---
import SocialLinks from './SocialLinks.astro';

interface Props {
  heading?: string;
  description?: string;
}

const {
  heading = "Let's Connect",
  description = "I'm always interested in hearing about new projects and opportunities.",
} = Astro.props;
---

<section class="py-12 border-t border-neutral-200">
  <div class="animate-in delay-3">
    <div class="card p-8 text-center">
      <h2 class="text-2xl font-semibold text-neutral-900 mb-3">
        {heading}
      </h2>
      <p class="text-neutral-600 mb-6 max-w-md mx-auto">
        {description}
      </p>
      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-6"
      >
        <a
          href="https://www.linkedin.com/in/derek-jensen-8305a313"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-secondary"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          Connect on LinkedIn
        </a>
      </div>
      <div class="pt-4 border-t border-neutral-100">
        <p class="text-sm text-neutral-500 mb-3">Or find me on</p>
        <SocialLinks size="md" class="justify-center" />
      </div>
    </div>
  </div>
</section>
