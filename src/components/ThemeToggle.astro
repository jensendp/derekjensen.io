---
// Theme toggle component for dark mode
---

<button
  type="button"
  id="theme-toggle"
  class="p-2 text-neutral-600 hover:text-neutral-900 hover:bg-neutral-100 rounded-md transition-colors duration-200"
  aria-label="Toggle dark mode"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="w-5 h-5 sun-icon hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg
    class="w-5 h-5 moon-icon"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  let currentCleanup: (() => void) | null = null;

  function setupThemeToggle() {
    // Clean up previous listeners to prevent memory leaks
    if (currentCleanup) {
      currentCleanup();
      currentCleanup = null;
    }

    const button = document.getElementById('theme-toggle');
    const sunIcon = button?.querySelector('.sun-icon');
    const moonIcon = button?.querySelector('.moon-icon');

    if (!button) return;

    function updateIcons(theme: string) {
      if (theme === 'dark') {
        sunIcon?.classList.remove('hidden');
        moonIcon?.classList.add('hidden');
      } else {
        sunIcon?.classList.add('hidden');
        moonIcon?.classList.remove('hidden');
      }
    }

    function toggleTheme() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme') || 'light';
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

      html.setAttribute('data-theme', newTheme);
      try {
        localStorage.setItem('theme', newTheme);
      } catch (e) {
        // Silently fail if localStorage is unavailable (e.g., private browsing)
      }
      updateIcons(newTheme);
    }

    // Initialize icons based on current theme
    const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
    updateIcons(currentTheme);

    button.addEventListener('click', toggleTheme);

    // Store cleanup function for next navigation
    currentCleanup = () => {
      button.removeEventListener('click', toggleTheme);
    };
  }

  // Run on initial page load
  setupThemeToggle();

  // Re-run after view transitions
  document.addEventListener('astro:page-load', setupThemeToggle);
</script>
