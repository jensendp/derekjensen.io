---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
import FeaturedProject from '@components/FeaturedProject.astro';
import BlogPostCard from '@components/BlogPostCard.astro';
import AboutSnippet from '@components/AboutSnippet.astro';
import ContactCTA from '@components/ContactCTA.astro';

// Placeholder blog posts - will be replaced with actual content collection data
const recentPosts = [
  {
    title: "Why I'm Building Brew Loyalty",
    description: "The story behind building a loyalty rewards platform for local coffee shops.",
    href: "/blog",
    tags: ["React Native", "Startup"],
  },
  {
    title: "My React Native Architecture Decisions",
    description: "Technical deep-dive into the architecture choices for a production mobile app.",
    href: "/blog",
    tags: ["React Native", "Architecture"],
  },
];
---

<BaseLayout title="Derek Jensen">
  <!-- Hero Section -->
  <Hero
    title="Hi, I'm Derek Jensen"
    subtitle="Software Engineer"
    description="I build mobile applications and web experiences with a focus on clean code, great user experience, and modern technologies like React Native and TypeScript."
    primaryCta={{ text: "View My Work", href: "/projects" }}
    secondaryCta={{ text: "About Me", href: "/about" }}
  />

  <!-- Featured Project -->
  <section class="py-12 border-t border-neutral-200">
    <div class="animate-in delay-1">
      <h2 class="text-sm font-medium text-neutral-500 uppercase tracking-wider mb-6">
        Featured Project
      </h2>
      <FeaturedProject
        title="Brew Loyalty"
        description="A mobile loyalty rewards app for coffee shops, built with React Native and a modern tech stack. Helping local cafes build lasting customer relationships."
        href="/projects"
        technologies={["React Native", "TypeScript", "Node.js"]}
        featured={true}
      />
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="py-12 border-t border-neutral-200">
    <div class="animate-in delay-2">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-sm font-medium text-neutral-500 uppercase tracking-wider">
          Recent Writing
        </h2>
        <a
          href="/blog"
          class="text-sm font-medium text-primary-600 hover:text-primary-700 link-underline"
        >
          View all posts
        </a>
      </div>
      <div class="divide-y divide-neutral-100">
        {recentPosts.map((post) => (
          <BlogPostCard
            title={post.title}
            description={post.description}
            href={post.href}
            tags={post.tags}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- About Snippet -->
  <AboutSnippet />

  <!-- Contact CTA -->
  <ContactCTA
    heading="Let's Build Something Together"
    description="I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision."
  />
</BaseLayout>
