---
import BaseLayout from '@layouts/BaseLayout.astro';

// This is where you build the actual demo site
// You have full access to all Astro features, components, and styling
---

<BaseLayout
  title="Sample Business Site - Demo"
  description="A demo redesign of a sample business website"
>
  <!-- Demo Site Content -->
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-primary-600 text-white py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Welcome to Sample Business
        </h1>
        <p class="text-xl text-primary-100 mb-8">
          This is a demo site showcasing a modern redesign
        </p>
        <div class="flex gap-4 justify-center">
          <a href="#services" class="btn btn-primary bg-white text-primary-600 hover:bg-neutral-50">
            Our Services
          </a>
          <a href="#contact" class="btn border-2 border-white text-white hover:bg-white hover:text-primary-600">
            Contact Us
          </a>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-16 bg-neutral-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-neutral-900 mb-8 text-center">Our Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {[
            { title: 'Service One', description: 'High-quality service with attention to detail' },
            { title: 'Service Two', description: 'Innovative solutions for modern problems' },
            { title: 'Service Three', description: 'Dedicated support when you need it' },
          ].map((service) => (
            <div class="bg-white p-6 rounded-lg border border-neutral-200">
              <h3 class="text-xl font-semibold text-neutral-900 mb-2">{service.title}</h3>
              <p class="text-neutral-600">{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-neutral-900 mb-8 text-center">Get In Touch</h2>
        <div class="max-w-lg mx-auto bg-white p-8 rounded-lg border border-neutral-200">
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-neutral-700 mb-1">
                Name
              </label>
              <input
                type="text"
                id="name"
                class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">
                Email
              </label>
              <input
                type="email"
                id="email"
                class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="your@email.com"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">
                Message
              </label>
              <textarea
                id="message"
                rows="4"
                class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="How can we help?"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-full">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Back to Gallery Link -->
    <div class="py-8 bg-neutral-50 border-t border-neutral-200">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <a
          href="/demo"
          class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Demo Gallery
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
