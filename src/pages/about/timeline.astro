---
import BaseLayout from '@layouts/BaseLayout.astro';
import Timeline from '@components/Timeline.astro';
---

<BaseLayout
  title="Career Timeline"
  description="A complete timeline of Derek Jensen's career journey from 2002 to present."
>
  <!-- Page Header -->
  <section class="py-12 sm:py-16">
    <div class="animate-in">
      <div class="mb-6">
        <a
          href="/about"
          class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700 mb-4"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to About
        </a>
      </div>
      <h1
        class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6 tracking-tight"
      >
        Career Timeline
      </h1>
      <p class="text-xl text-neutral-600 max-w-2xl leading-relaxed">
        A journey spanning over 20 years in technologyâ€”from installing servers in data centers
        to building mobile apps used by millions.
      </p>
    </div>
  </section>

  <!-- Full Timeline -->
  <section class="py-16 border-t border-neutral-200">
    <div class="animate-in delay-1">
      <Timeline preview={false} />
    </div>
  </section>

  <!-- Back to Top -->
  <section class="py-8 border-t border-neutral-200">
    <div class="text-center">
      <button
        id="back-to-top"
        class="inline-flex items-center gap-2 px-6 py-3 text-neutral-600 hover:text-neutral-900 font-medium transition-colors"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
        Back to Top
      </button>
    </div>
  </section>
</BaseLayout>
